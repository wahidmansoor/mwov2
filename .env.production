# ===================================
# ONCOVISTA ENVIRONMENT CONFIGURATION
# ===================================

# ======================
# DEPLOYMENT MODE
# ======================
# Set to 'development' for local, 'production' for Netlify
NODE_ENV=development
VITE_ENVIRONMENT=development

# ======================
# SUPABASE CONFIGURATION (PRIMARY DATABASE)
# ======================
# ðŸš¨ REPLACE WITH YOUR ACTUAL SUPABASE VALUES
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# ======================
# LOCAL DEVELOPMENT SERVER
# ======================
PORT=3001
HOST=localhost

# ======================
# API ENDPOINTS
# ======================
# Local Development
VITE_API_BASE_URL=http://localhost:3001/api

# Production (Netlify) - Set in Netlify Dashboard
# VITE_API_BASE_URL=https://your-site.netlify.app/api

# ======================
# AUTHENTICATION & SECURITY
# ======================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# ======================
# CORS CONFIGURATION
# ======================
# Development
CORS_ORIGIN=http://localhost:5173
# Production - Set in Netlify to your domain
# CORS_ORIGIN=https://your-site.netlify.app

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ======================
# FILE UPLOAD
# ======================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ======================
# LOGGING
# ======================
LOG_LEVEL=debug

# ======================
# APPLICATION INFO
# ======================
VITE_APP_NAME=OncoVista
VITE_APP_VERSION=1.0.0

# ======================
# FEATURE FLAGS
# ======================
VITE_ENABLE_MEDICAL_IMAGING=true
VITE_ENABLE_ADVANCED_ANALYTICS=true
VITE_ENABLE_EXPORT_FEATURES=true

# ======================
# NETLIFY-SPECIFIC VARIABLES
# ======================
# These are automatically set by Netlify, but you can override:
# NETLIFY=true
# NETLIFY_DEV=false
# SITE_NAME=your-site-name

# ======================
# PRODUCTION ENVIRONMENT VARIABLES
# ======================
# Set these in your Netlify Dashboard under Site Settings > Environment Variables:
#
# VITE_SUPABASE_URL=https://your-project-ref.supabase.co
# VITE_SUPABASE_ANON_KEY=your-anon-key-here
# SUPABASE_SERVICE_KEY=your-service-key-here
# VITE_API_BASE_URL=https://your-site.netlify.app/api
# VITE_ENVIRONMENT=production
# NODE_ENV=production
# CORS_ORIGIN=https://your-site.netlify.app
