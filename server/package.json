{
  "name": "oncovista-server",
  "version": "2.0.0",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:old": "nodemon index.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:old": "node index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "npx drizzle-kit migrate",
    "db:generate": "npx drizzle-kit generate",
    "db:studio": "npx drizzle-kit studio",
    "seed": "node scripts/seed.js",
    "healthz": "curl http://localhost:5000/api/health || echo 'Health check failed'",
    "clean": "rm -rf dist .tsbuildinfo",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "drizzle-orm": "^0.29.1",
    "postgres": "^3.4.3",
    "@supabase/supabase-js": "^2.38.4",
    "zod": "^3.22.4",
    "multer": "^1.4.5-lts.1",
    "express-validator": "^7.0.1",
    "openai": "^4.24.1",
    "pino": "^8.16.2",
    "pino-http": "^8.5.1",
    "tsx": "^4.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "drizzle-kit": "^0.20.4",
    "@types/pg": "^8.10.9",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2",
    "pino-pretty": "^10.3.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0"
  }
}
