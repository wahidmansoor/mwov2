# Environment Configuration for Localhost Development

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres

# JWT Configuration (for custom auth if needed)
JWT_SECRET=your-super-secret-jwt-key-for-localhost-development-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Security
BCRYPT_ROUNDS=10

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Client Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_APP_NAME=OncoVista
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Features
VITE_ENABLE_MEDICAL_IMAGING=true
VITE_ENABLE_ADVANCED_ANALYTICS=true
VITE_ENABLE_EXPORT_FEATURES=true
